<%- include ("./partials/_header") %>

<title>Login</title>

<style>
  .bd-placeholder-img {
    font-size: 1.125rem;
    text-anchor: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  @media (min-width: 768px) {
    .bd-placeholder-img-lg {
      font-size: 3.5rem;
    }
  }
</style>
<!-- Custom styles for this template -->
<link href="/css/signin.css" rel="stylesheet">
</head>

<body class="text-center">
  <form class="form-signin" action="/login" method="POST">
    <img class="mb-4" src="/media/logoCircle.png" alt="" width="100" height="100">
    <h1 class="h3 mb-3 font-weight-normal">Por Favor Inicie Sesión</h1>
    <label for="inputEmail" class="sr-only">Correo Electrónico</label>
    <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Correo Electrónico" required autofocus>
    <label for="inputPassword" class="sr-only">Contraseña</label>
    <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Contraseña" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Iniciar Sesión</button>
    <a href="/register" class="btn btn-lg btn-secondary btn-block" role=" button">Registrarse</a>
    <p class="mt-5 mb-3 text-muted">&copy; 2020</p>
  </form>
</body>

</html>