<%- include ("./partials/_header") %>

    <title>Productos · Dosabores</title>

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    <!-- Custom styles for this template -->
    <link href="/css/album.css" rel="stylesheet">
  </head>
  <body>
    <%- include ("./partials/_navbar") %>

<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1>Nuestros productos</h1>
      <p class="lead text-muted">¡Lo mejor de ambos sabores! Snacks salados y picosos, también postres deliciosos.</p>
      <p>
      </p>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
        <% for (var i = 0; i < products.length; i++) { %>
        <div class="col-md-4" id="<%= products[i].name %>">
          <div class="card mb-4 shadow-sm">
            <img src="/media/<%= products[i].img %>" class="card-img-top" alt="<%= products[i].name %>">
            <div class="card-body">
              <p class="card-text"><strong><%= products[i].name %></strong></p>
              <% for (var j = 0; j < products[i].prices.length; j++) { %>
                <form action="/addToCart" method="POST">
                  <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="product-name" 
                      value = "<%= products[i].name %>" hidden>
                    <input type="text" name="size" class="form-control" placeholder="product-size" 
                      value = "<%= products[i].prices[j].size %>" hidden>
                    <input type="number" name="price" class="form-control" placeholder="product-price" 
                      value = "<%= products[i].prices[j].price %>" hidden>
                    
                    <p><%= products[i].prices[j].size %><span style="float: right;">$<%= products[i].prices[j].price %></span></p>
                    <input class="form-quantity-field" type="number" id="quantity" name="quantity" value="0" min="0">
                   
                    <button type="submit" class="btn btn-primary" style="float: right;"> <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart-plus-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM4 14a1 1 0 1 1 2 0 1 1 0 0 1-2 0zm7 0a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9V5.5z"/>
                    </svg></button>
                  </div>
                </form>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>

      </div>
    </div>
  </div>

</main>

<%- include ("./partials/_footer") %>
